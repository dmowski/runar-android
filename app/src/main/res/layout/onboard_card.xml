<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/card_start_guideline"
        app:layout_constraintEnd_toEndOf="@id/card_end_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/transparent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/card_button"
                android:layout_marginBottom="80dp"
                android:elevation="2dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/onboarding_button_background_selector"
                android:fontFamily="@font/amatic_sc_bold"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="@string/onboard_next"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/onboarding_button_text_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="H,5.5:1"/>
            <TextView
                android:id="@+id/header"
                android:layout_marginTop="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amatic_sc_bold"
                android:textColor="@color/onboard_header_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center" />
            <TextView
                android:id="@+id/info"
                android:layout_marginTop="30dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/onboard_text_color"
                android:fontFeatureSettings="pnum, lnum"
                android:lineSpacingMultiplier="1.2"
                android:gravity="center" />
            <ImageView
                android:id="@+id/image"
                android:layout_margin="18dp"
                android:layout_marginBottom="22dp"
                app:layout_constraintTop_toBottomOf="@id/info"
                app:layout_constraintBottom_toTopOf="@id/card_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_start_guideline"
        app:layout_constraintGuide_percent="0.12"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_end_guideline"
        app:layout_constraintGuide_percent="0.88"
        android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>