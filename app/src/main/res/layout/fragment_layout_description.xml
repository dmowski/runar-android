<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.test.runar.CustomView.OffsetImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_fire"
        app:offsetScaleType="fitX"
        app:verticalCropOffset="1"
        app:verticalFitOffset="0"/>
    <FrameLayout
        app:layout_constraintHorizontal_weight="72"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,3.5:1"
        android:id="@+id/description_header_frame"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_border_l"
        app:layout_constraintEnd_toStartOf="@id/layout_border_r">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoSizeTextType="uniform"
            android:text="@string/header_sample"
            android:textColor="@color/layout_desc_deselected"
            android:fontFamily="@font/amatic_sc_bold"
            android:letterSpacing="@dimen/layout_text_letter_spacing"
            android:textAlignment="center"/>
    </FrameLayout>
    <FrameLayout
        app:layout_constraintHorizontal_weight="14"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/layout_border_l"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/description_header_frame"/>
    <FrameLayout
        app:layout_constraintHorizontal_weight="14"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/layout_border_r"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/description_header_frame"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_cross"
        app:layout_constraintStart_toEndOf="@id/description_header_frame"
        app:layout_constraintTop_toTopOf="@id/description_header_frame"/>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_ask"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/description_header_frame"
        app:layout_constraintBottom_toBottomOf="@id/description_header_frame"/>
    <FrameLayout
        app:layout_constraintHorizontal_weight="62"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,4.55:1"
        android:id="@+id/description_button_frame"
        android:background="@drawable/description_button_background_selector"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_border_lb"
        app:layout_constraintEnd_toStartOf="@id/layout_border_rb"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoSizeTextType="uniform"
            android:text="@string/layout_description_button"
            android:textColor="@color/layout_description_button_text_selector"
            android:fontFamily="@font/amatic_sc_bold"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>
    </FrameLayout>
    <FrameLayout
        app:layout_constraintHorizontal_weight="19"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/layout_border_lb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/description_button_frame"/>
    <FrameLayout
        app:layout_constraintHorizontal_weight="19"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/layout_border_rb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/description_button_frame"
        app:layout_constraintEnd_toEndOf="parent"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/description_button_frame"
        app:layout_constraintStart_toStartOf="@id/description_button_frame"
        android:minWidth="0dp"
        android:paddingStart="10dp"
        android:text="@string/layout_description_checkbox"
        android:textColor="@color/checkbox"
        android:buttonTint="@color/checkbox_color"
        android:button="@drawable/checkbox_selector" />
</androidx.constraintlayout.widget.ConstraintLayout>