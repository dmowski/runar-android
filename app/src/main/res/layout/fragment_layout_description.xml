<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_fire">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintVertical_weight="13"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/top_part"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/middle_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_cross"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp" />
        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_ask"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/layout_desc_deselected"
            android:fontFamily="@font/amatic_sc_bold"
            android:text="@string/header_sample"
            android:textSize="55sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:letterSpacing="@dimen/layout_text_letter_spacing"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middle_part"
        app:layout_constraintVertical_weight="66"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_part">
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintVertical_weight="21"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/bottom_part"
        app:layout_constraintTop_toBottomOf="@id/middle_part"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/description_button_view"
            app:layout_constraintStart_toStartOf="@id/description_button_view"
            android:text="@string/layout_description_checkbox"
            android:textColor="@color/checkbox"
            android:translationX="-5dp"
            android:minWidth="0dp"
            android:minHeight="0dp"/>
        <FrameLayout
            android:id="@+id/description_button_view"
            app:layout_constraintHorizontal_weight="60"
            app:layout_constraintDimensionRatio="H,4.5:1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/description_button_background_selector"
            app:layout_constraintTop_toBottomOf="@id/checkbox"
            app:layout_constraintStart_toEndOf="@id/start_l"
            app:layout_constraintEnd_toStartOf="@+id/finish_l"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/layout_description_button"
                app:autoSizeTextType="uniform"
                android:textAlignment="center"
                android:fontFamily="@font/amatic_sc_bold"
                android:letterSpacing="@dimen/layout_text_letter_spacing"
                android:textColor="@color/layout_description_button_text_selector"
                android:duplicateParentState="true" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/start_l"
            app:layout_constraintHorizontal_weight="20"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/description_button_view"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/finish_l"
            app:layout_constraintHorizontal_weight="20"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/description_button_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>