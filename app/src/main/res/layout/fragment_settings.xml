<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SettingsFragment">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_header_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_heading_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_heading_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_heading_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_heading_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_setting_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.09" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_language_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_setting_language_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_setting_language_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_setting_language2_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_setting_language2_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_radio_button_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_radio_button_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.89" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider_music_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_music_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.46" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_music_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider2_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_rate_app_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_rate_app_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider3_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_about_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_about_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider4_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_arrow_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/settings_header"
        app:layout_constraintBottom_toTopOf="@+id/bottom_header_guideline"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/settings_layout"
        android:fontFamily="@font/roboto_light"
        android:textSize="24dp"
        app:layout_constraintDimensionRatio="H,3.5:1"
        android:textColor="@color/settings_header_name"
        android:letterSpacing="@dimen/layout_text_letter_spacing"
        app:layout_constraintStart_toEndOf="@+id/left_heading_guideline"
        app:layout_constraintEnd_toStartOf="@+id/right_heading_guideline"
        app:layout_constraintTop_toBottomOf="@+id/top_heading_guideline"
        app:layout_constraintBottom_toTopOf="@+id/bottom_heading_guideline"/>

    <TextView
        android:id="@+id/setting_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_language"
        app:layout_constraintTop_toBottomOf="@+id/top_language_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_setting_guideline"
        android:textSize="20dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/settings_language_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_language_rus"
        app:layout_constraintTop_toBottomOf="@+id/top_setting_language_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_setting_language_guideline"
        android:textSize="16dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/settings_language"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_language_en"
        app:layout_constraintTop_toBottomOf="@+id/top_setting_language2_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_setting_language_guideline"
        android:textSize="16dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/settings_language" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_setting_language2_guideline"
        app:layout_constraintEnd_toStartOf="@+id/right_radio_button_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_radio_button_guideline"
        app:layout_constraintTop_toBottomOf="@+id/top_setting_language_guideline">

        <RadioButton
            android:id="@+id/radioButton_rus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/settings_radio_button" />

        <RadioButton
            android:id="@+id/radioButton_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/settings_radio_button" />
    </RadioGroup>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/divider"
        app:layout_constraintBottom_toTopOf="@+id/divider_music_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_setting_guideline"/>
    <TextView
        android:id="@+id/music_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/music_txt"
        app:layout_constraintTop_toBottomOf="@+id/top_music_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_setting_guideline"
        android:textSize="20dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/settings_language_name"/>

    <Switch
        android:id="@+id/switch_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/left_radio_button_guideline"
        app:layout_constraintTop_toBottomOf="@+id/top_music_guideline"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/divider"
        app:layout_constraintBottom_toTopOf="@+id/divider2_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_setting_guideline"/>

    <TextView
        android:id="@+id/rate_app_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_app_txt"
        app:layout_constraintTop_toBottomOf="@+id/top_rate_app_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_setting_guideline"
        android:textSize="20dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/settings_language_name"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/divider"
        app:layout_constraintBottom_toTopOf="@+id/divider3_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_setting_guideline"/>
    <TextView
        android:id="@+id/about_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_app_txt"
        app:layout_constraintTop_toBottomOf="@+id/top_about_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_setting_guideline"
        android:textSize="20dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/settings_language_name"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/right"
        app:layout_constraintEnd_toStartOf="@+id/right_radio_button_guideline"
        app:layout_constraintTop_toBottomOf="@+id/top_rate_app_guideline"
        app:layout_constraintBottom_toTopOf="@+id/bottom_rate_app_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_arrow_guideline"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/right"
        app:layout_constraintEnd_toStartOf="@+id/right_radio_button_guideline"
        app:layout_constraintTop_toBottomOf="@+id/top_about_guideline"
        app:layout_constraintBottom_toTopOf="@+id/bottom_about_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_arrow_guideline"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/divider"
        app:layout_constraintBottom_toTopOf="@+id/divider4_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_setting_guideline"/>
</androidx.constraintlayout.widget.ConstraintLayout>