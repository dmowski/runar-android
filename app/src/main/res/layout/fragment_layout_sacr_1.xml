<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.tnco.runar.customView.OffsetImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_fire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:offsetScaleType="fitX"
        app:verticalCropOffset="1"
        app:verticalFitOffset="0" />
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/description_header_frame"
                android:text="@string/sacr_header_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/amatic_sc_bold"
                android:letterSpacing="@dimen/layout_text_letter_spacing"
                android:textAlignment="center"
                android:textColor="@color/layout_desc_deselected"
                app:layout_constraintDimensionRatio="H,3.5:1"
                app:layout_constraintEnd_toStartOf="@id/right_header_guideline"
                app:layout_constraintStart_toEndOf="@id/left_header_guideline"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/sacr_main_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/description_header_frame"
                app:layout_constraintStart_toStartOf="@+id/left_img_guideline"
                app:layout_constraintEnd_toEndOf="@+id/right_img_guideline"
                android:adjustViewBounds="true"
                android:src="@drawable/sacr_button_image"/>
            <LinearLayout
                android:id="@+id/stars_layout"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sacr_main_img"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_star_empty"/>
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_star_empty"/>
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_star_empty"/>
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_star_empty"/>
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_star_empty"/>
            </LinearLayout>
            <TextView
                android:id="@+id/sacr_luck_tw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/stars_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingMultiplier="1.28"
                android:text="Уровень удачи 45%"
                android:fontFeatureSettings="pnum|lnum"
                android:textColor="@color/sacr_luck_text"
                android:gravity="center"
                android:layout_marginTop="5dp"/>
            <FrameLayout
                android:id="@+id/divider8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sacr_luck_tw"
                app:layout_constraintDimensionRatio="H,24:1"/>
            <ImageView
                android:id="@+id/spliter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/interpretation_bottom_line"
                app:layout_constraintEnd_toEndOf="@id/right_text_guideline"
                app:layout_constraintStart_toStartOf="@id/left_text_guideline"
                app:layout_constraintTop_toBottomOf="@id/divider8" />
            <FrameLayout
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spliter"
                app:layout_constraintDimensionRatio="H,24.5:1"/>
            <TextView
                android:id="@+id/sacr_first_tw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingMultiplier="1.01"
                android:text="@string/sacr_sub_header"
                android:fontFeatureSettings="pnum|lnum"
                android:textColor="@color/sacr_luck_text"
                android:gravity="center"/>
            <FrameLayout
                android:id="@+id/divider9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sacr_first_tw"
                app:layout_constraintDimensionRatio="H,18:1"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sacrifice_button_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/divider9"
                app:layout_constraintStart_toStartOf="@id/left_text_guideline"
                app:layout_constraintEnd_toStartOf="@id/sacrifice_button_2"
                android:foreground="@drawable/bg_sacrifice_button_select_border"
                app:layout_constraintDimensionRatio="H,1:1.27"
                android:layout_marginEnd="8dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/sacrifice_button_img_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/sacr_button_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedSacrType"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_sacr_button_select_big"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_header_guideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.25" />

                <TextView
                    android:id="@+id/item_header_1_tw"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/item_header_guideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/amatic_sc_bold"
                    android:text="@string/sacr_item_1"
                    android:textColor="@color/sacr_button_header"
                    android:gravity="center_horizontal|bottom"
                    android:lineSpacingMultiplier="1.19" />
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/item_header_guideline1"
                    app:layout_constraintBottom_toBottomOf="@id/item_bottom_guideline1"
                    app:layout_constraintStart_toStartOf="@id/item_start_guideline1"
                    app:layout_constraintEnd_toEndOf="@id/item_end_guideline1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/item_img_1"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_bottom_guideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.91" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_start_guideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.09" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_end_guideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.91" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sacrifice_button_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/divider9"
                app:layout_constraintStart_toEndOf="@id/sacrifice_button_1"
                app:layout_constraintEnd_toStartOf="@id/sacrifice_button_3"
                android:foreground="@drawable/bg_sacrifice_button_select_border"
                app:layout_constraintDimensionRatio="H,1:1.27"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/sacrifice_button_img_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/sacr_button_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedSacrType"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_sacr_button_select_big"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_header_guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.25" />
                <TextView
                    android:id="@+id/item_header_2_tw"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/item_header_guideline2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/amatic_sc_bold"
                    android:text="@string/sacr_item_2"
                    android:textColor="@color/sacr_button_header"
                    android:gravity="center_horizontal|bottom"
                    android:lineSpacingMultiplier="1.19" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_bottom_guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.94" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sacrifice_button_small_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/item_bottom_guideline2"
                    app:layout_constraintStart_toStartOf="@id/item_start_guideline2"
                    app:layout_constraintEnd_toEndOf="@id/item_end_guideline2"
                    app:layout_constraintDimensionRatio="H,1.9:1">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/sacr_button_mini_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/roundedSacrType2"
                        android:clickable="true"
                        android:focusable="true"/>
                    <TextView
                        android:id="@+id/sacr_b2_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/sacr_button_price_text"
                        android:fontFeatureSettings="pnum|lnum"
                        android:text="@string/sacr_button2_price"
                        android:lineSpacingMultiplier="0.98"
                        android:gravity="center"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_start_guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.27" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_end_guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.73" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_price_img_0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sacrifice_button_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/divider9"
                app:layout_constraintStart_toEndOf="@id/sacrifice_button_2"
                app:layout_constraintEnd_toEndOf="@id/right_text_guideline"
                android:foreground="@drawable/bg_sacrifice_button_select_border"
                app:layout_constraintDimensionRatio="H,1:1.27"
                android:layout_marginStart="8dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/sacrifice_button_img_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/sacr_button_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedSacrType"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_sacr_button_select_big"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_header_guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.25" />
                <TextView
                    android:id="@+id/item_header_3_tw"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/item_header_guideline3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/amatic_sc_bold"
                    android:text="@string/sacr_item_3"
                    android:textColor="@color/sacr_button_header"
                    android:gravity="center_horizontal|bottom"
                    android:lineSpacingMultiplier="1.19" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_bottom_guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.94" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sacrifice_button_small_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/item_bottom_guideline3"
                    app:layout_constraintStart_toStartOf="@id/item_start_guideline3"
                    app:layout_constraintEnd_toEndOf="@id/item_end_guideline3"
                    app:layout_constraintDimensionRatio="H,1.9:1">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/sacr_button_mini_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/roundedSacrType2"
                        android:clickable="true"
                        android:focusable="true"/>
                    <TextView
                        android:id="@+id/sacr_b3_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/sacr_button_price_text"
                        android:fontFeatureSettings="pnum|lnum"
                        android:text="@string/sacr_button3_price"
                        android:lineSpacingMultiplier="0.98"
                        android:gravity="center"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_start_guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.27" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/item_end_guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.73" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_price_img_1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <FrameLayout
                android:id="@+id/divider10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sacrifice_button_2"
                app:layout_constraintDimensionRatio="H,13:1"/>
            <TextView
                android:id="@+id/main_text"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/sacr_main_text"
                android:fontFeatureSettings="pnum|lnum"
                android:text="@string/sacr_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.4"
                app:layout_constraintTop_toBottomOf="@id/divider10"
                app:layout_constraintStart_toStartOf="@id/left_text_guideline"
                app:layout_constraintEnd_toEndOf="@id/right_text_guideline"/>

            <FrameLayout
                android:id="@+id/divider11"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_text"
                app:layout_constraintDimensionRatio="H,14:1"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_text_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_text_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_header_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.14" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_header_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.86" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_img_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_img_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>