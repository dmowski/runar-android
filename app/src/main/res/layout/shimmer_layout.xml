<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/shrune_1"
        android:layout_width="58dp"
        android:layout_height="76dp"
        android:background="@drawable/slot_active"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/shrune_2"
        android:layout_width="58dp"
        android:layout_height="76dp"
        android:layout_margin="15dp"
        android:background="@drawable/slot_active"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/shrune_1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/shrune_3"
        android:layout_width="58dp"
        android:layout_height="76dp"
        android:layout_margin="15dp"
        android:background="@drawable/slot_active"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/shrune_2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/shrune_4"
        android:layout_width="58dp"
        android:layout_height="76dp"
        android:layout_margin="15dp"
        android:background="@drawable/slot_active"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/shrune_3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/shrune_5"
        android:layout_width="56dp"
        android:layout_height="73dp"
        android:layout_margin="15dp"
        android:background="@drawable/slot_active"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/shrune_4"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>