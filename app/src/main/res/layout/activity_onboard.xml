<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">
    <com.tnco.runar.ui.component.view.OffsetImageView
        android:id="@+id/offsetImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_fire"
        app:offsetScaleType="fitX"
        app:verticalCropOffset="1"
        app:verticalFitOffset="0" />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:id="@+id/viewPager"
        android:overScrollMode="never"
        android:clipToPadding="false"/>
    <TextView
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboard_skip"
        android:textSize="@dimen/buttonSkip"
        android:alpha="0.7"
        android:textColor="@color/onboard_skip_color"
        android:padding="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/roboto_medium"
        android:fontFeatureSettings="pnum|lnum"/>
    <LinearLayout
        android:id="@+id/circles_layout"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_point_deselected"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_point_deselected"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_point_deselected"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_point_deselected"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_point_deselected"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_point_deselected"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>