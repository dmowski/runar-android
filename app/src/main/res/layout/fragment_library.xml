<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/action_bar_frame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/library_top_bar"
        app:layout_constraintDimensionRatio="H,1:0.135">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Библиотека"
            app:menu="@menu/library_top_bar"
            app:titleTextColor="@color/library_top_bar_header"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:id="@+id/main_sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/action_bar_frame"
        app:layout_constraintStart_toStartOf="@id/sv_start_guideline"
        app:layout_constraintEnd_toEndOf="@id/sv_end_guideline"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:0.28">
                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:src="@drawable/ic_divider"/>
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/top_guideline_1"
                    app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/library_item1_pic"
                    app:layout_constraintDimensionRatio="H,1:1"/>
                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/top_arrow_guideline_1"
                    app:layout_constraintBottom_toTopOf="@id/bottom_arrow_guideline_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintDimensionRatio="H,1:0.57"
                    android:src="@drawable/ic_right"/>
                <TextView
                    android:text="Описание рун"
                    android:id="@+id/item_header_1"
                    android:layout_marginTop="-5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/text_top_1"
                    app:layout_constraintStart_toEndOf="@id/img1"
                    app:layout_constraintEnd_toStartOf="@id/arrow1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/library_item_header" />
                <TextView
                    android:text="Письменность древних германцев, употреблявшаяся с I—II по XII век"
                    android:id="@+id/item_text_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/item_header_1"
                    app:layout_constraintStart_toEndOf="@id/img1"
                    app:layout_constraintEnd_toStartOf="@id/arrow1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/library_item_text"
                    android:lineSpacingMultiplier="1.12" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/top_guideline_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.23"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/bottom_guideline_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.77"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/text_top_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.18"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/top_arrow_guideline_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.43"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/bottom_arrow_guideline_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.57"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item2"
                app:layout_constraintTop_toBottomOf="@id/item1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:0.28">
                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:src="@drawable/ic_divider"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item3"
                app:layout_constraintTop_toBottomOf="@id/item2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:0.28">
                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:src="@drawable/ic_divider"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item4"
                app:layout_constraintTop_toBottomOf="@id/item3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:0.28">
                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:src="@drawable/ic_divider"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item5"
                app:layout_constraintTop_toBottomOf="@id/item4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:0.28">
                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:src="@drawable/ic_divider"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sv_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sv_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"/>

</androidx.constraintlayout.widget.ConstraintLayout>